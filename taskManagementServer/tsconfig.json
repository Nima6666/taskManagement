{
  "compilerOptions": {
    "target": "ES2020",                           // Specify ECMAScript target version
    "module": "ESNext",                           // Use ESNext modules (native ES modules)
    "moduleResolution": "node",                   // Node-style resolution for ES modules
    "strict": true,                               // Enable strict type-checking options
    "esModuleInterop": true,                      // Enable support for ES modules in CommonJS
    "skipLibCheck": true,                         // Skip type checking for libraries
    "outDir": "./dist",                           // Output directory for compiled JS files
    "rootDir": "./src",                           // Root directory for TypeScript files
    "resolveJsonModule": true,                    // Enable importing JSON files
    "allowSyntheticDefaultImports": true          // Allow default imports from modules without default export
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}